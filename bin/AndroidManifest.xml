<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iihm.plasticity.appslist.activity"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:name="com.iihm.plasticity.appslist.app.AppData"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.iihm.plasticity.appslist.activity.AppListActivity"
            android:label="@string/title_activity_apk_list"
            android:theme="@android:style/Theme.Wallpaper"> <!-- Affiche comme wallpaper celui du telephone -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iihm.plasticity.appslist.activity.ApkInfo"
            android:label="@string/title_activity_apk_list" >
        </activity>
    </application>
</manifest>